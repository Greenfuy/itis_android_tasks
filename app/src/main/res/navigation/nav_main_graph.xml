<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.itis.itistasks.ui.fragments.NotificationsFragment"
        android:label="fragment_navigation_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_navigationMainFragment_to_navigationSettingsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_coroutinesFragment"
            app:destination="@id/coroutinesFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.itis.itistasks.ui.fragments.NotificationsFragment"
        android:label="fragment_navigation_profile"
        tools:layout="@layout/fragment_notifications">
    </fragment>

    <fragment
        android:id="@+id/coroutinesFragment"
        android:name="com.itis.itistasks.ui.fragments.CoroutinesFragment"
        android:label="fragment_navigation_settings"
        tools:layout="@layout/fragment_coroutines">

    </fragment>

</navigation>