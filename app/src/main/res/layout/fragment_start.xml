<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.StartFragment"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="212dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="@string/news_app"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_news_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <EditText
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:id="@+id/et_news_count"
        android:hint="@string/news_count"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        android:inputType="number">

    </EditText>

    <Button
        android:layout_width="242dp"
        android:layout_height="64dp"
        android:id="@+id/btn_start"
        android:text="@string/start"
        android:textSize="24sp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/et_news_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>